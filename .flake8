[flake8]
max-complexity = 10
max-line-length = 120
ignore =
    D100, D101, D102, D103, D104, D105, D106, D107, D400,
    E501, E202, E203, E226, E231,
    B001, B008, B024,
show-source = true
doctests = true

statistics = True

inline-quotes = single
multiline-quotes = single

docstring-quotes = single

# plugins:
accept-encodings = utf-8
max-local-variables = 20
min-name-length = 2
max-imports = 20
max-module-members = 40
