[flake8]
max-complexity = 10
max-line-length = 120
ignore = E501,W503
show-source = true
doctests = true

statistics = True

inline-quotes = single
multiline-quotes = single

docstring-quotes = single

# plugins:
accept-encodings = utf-8
max-local-variables = 20
min-name-length = 2
max-imports = 20
max-module-members = 40
