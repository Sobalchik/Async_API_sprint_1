[flake8]
max-complexity = 50
max-line-length = 120
ignore =
    B001, B008, B024,
    C812, C815, C816, C819,
    DAR101, DAR201,
    E122, E125, E128, E202, E203, E231, E302, E303, E402, E501, E701, E714, E722, E800,
    F811, F841,
    I001, I003, I004, I005,
    Q000, Q001, Q002,
    S101, S104, S105, S113, S311, S608,
    W291, W292, W391

show-source = true
doctests = false
statistics = false

inline-quotes = single
multiline-quotes = single
docstring-quotes = single
